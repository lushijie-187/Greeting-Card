<!-- file: res/layout/fragment_profile.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5"
    tools:context=".ProfileFragment"> <!-- 假设未来的Fragment类名 -->

    <!-- 顶部个人信息区域 -->
    <!-- 使用 RelativeLayout 来实现复杂的相对定位 -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="240dp">

        <!-- 背景图 -->
        <!-- 使用 FrameLayout 来堆叠背景和遮罩 -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/profile_background_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/bg_profile_header" /> <!-- 假设你有一个背景图资源 -->

            <!-- 半透明黑色遮罩，用于增强文字对比度 -->
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#33000000" />
        </FrameLayout>


        <!-- 头像 -->
        <!-- layout_centerInParent="true" 是 RelativeLayout 的特性 -->
        <ImageView
            android:id="@+id/profile_avatar"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_default_avatar" /> <!-- 假设你有一个默认头像资源 -->


        <!-- 用户名 -->
        <!-- layout_below 和 layout_centerHorizontal 是 RelativeLayout 的特性 -->
        <TextView
            android:id="@+id/profile_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/profile_avatar"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:text="Android Coder"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <!-- 中间的功能列表区域 -->
    <!-- 使用 LinearLayout (vertical) 创建一个垂直列表 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">

        <!-- 菜单项1: 我的收藏 -->
        <!-- 每个菜单项内部使用 LinearLayout (horizontal) 来水平排列图标和文字 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingHorizontal="16dp"
            android:paddingVertical="12dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_default_avatar"/> <!-- 假设图标 -->
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="16dp"
                android:text="我的收藏"
                android:textSize="16sp"/>
            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_arrow_right"/> <!-- 假设图标 -->
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="16dp"
            android:background="#E0E0E0"/>

        <!-- 菜单项2: 浏览历史 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingHorizontal="16dp"
            android:paddingVertical="12dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_history"/> <!-- 假设图标 -->
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="16dp"
                android:text="浏览历史"
                android:textSize="16sp"/>
            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_arrow_right"/> <!-- 假设图标 -->
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
