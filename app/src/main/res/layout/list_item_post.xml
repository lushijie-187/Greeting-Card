<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- 1. 帖子主图 -->
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/post_image"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            app:layout_constraintDimensionRatio="1:1.2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            fresco:placeholderImage="@drawable/placeholder_image"
            fresco:failureImage="@drawable/error_image"
            fresco:actualImageScaleType="centerCrop"/>

        <!-- 2. 帖子标题 -->
        <TextView
            android:id="@+id/post_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:textSize="15sp"
            android:textColor="@android:color/black"
            android:maxLines="2"
            android:ellipsize="end"
            app:layout_constraintTop_toBottomOf="@id/post_image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="这是一个很长很长很长的帖子标题，用来测试显示效果。这是一个很长很长很长的帖子标题，用来测试显示效果。" />

        <!-- 3. 用户头像 -->
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/user_avatar"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintTop_toBottomOf="@id/post_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            fresco:placeholderImage="@drawable/ic_person"
            fresco:roundAsCircle="true" />

        <!-- 4. 用户名 -->
        <TextView
            android:id="@+id/user_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textSize="10sp"
            app:layout_constraintStart_toEndOf="@id/user_avatar"
            app:layout_constraintEnd_toStartOf="@id/like_button"
            app:layout_constraintTop_toTopOf="@id/user_avatar"
            app:layout_constraintBottom_toBottomOf="@id/user_avatar"
            tools:text="追风筝的人" />

        <!-- 5. 点赞图标 -->
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/like_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="-10dp"
            android:layout_marginEnd="-5dp"
            app:layout_constraintBottom_toBottomOf="@id/user_avatar"
            app:layout_constraintTop_toTopOf="@id/user_avatar"
            app:layout_constraintEnd_toStartOf="@id/like_count"
            app:lottie_rawRes="@raw/lottie_like_animation"
            app:lottie_autoPlay="false"
            app:lottie_loop="false" />

        <!-- 6. 点赞数 -->
        <TextView
            android:id="@+id/like_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:textSize="10sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/user_avatar"
            app:layout_constraintBottom_toBottomOf="@id/user_avatar"
            tools:text="1249" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
